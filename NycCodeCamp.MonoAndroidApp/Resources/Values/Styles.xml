<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="ApplicationTheme" parent="android:Theme.Black">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:listViewStyle">@style/ListView</item>
    </style>

    <style name="ListView" parent="android:Widget.ListView">
        <item name="android:divider">@color/black</item>
    </style>
    
    <style name="WindowTitleBackground">
        <item name="android:background">@color/WindowTitleBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">2dip</item>
    </style>

    <style name="Wrapper">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:layout_marginBottom">6dip</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ListItemTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="DetailSubtitle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="DetailText">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">6dip</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">6dip</item>
        <item name="android:textColor">@color/SectionHeader</item>
    </style>
</resources>